<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" auto-import="true" assembly="NewsPortal" namespace="NewsPortal.BusinessEntities">
  <class name="NewsItem" table="News" dynamic-update="true" >
    <cache usage="read-write"/>
    <id name="Id" column="Id" type="int">
      <generator class="native" />
    </id>
    <property name="Title" type="string"/>
    <property name="Text" type="string"/>
    <property name="PublishDate" column="PublishDate"/>
    <property name="ImageSrc" type="string"/>
  </class>
</hibernate-mapping>